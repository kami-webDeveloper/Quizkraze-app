{
  "version": 2,
  "builds": [{ "src": "api/index.js", "use": "@vercel/node" }],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/assets/(.*)", "dest": "backend/public/assets/$1" },
    { "src": "/favicon.ico", "dest": "backend/public/favicon.ico" },
    { "src": "/manifest.json", "dest": "backend/public/manifest.json" },
    {
      "src": "/(.*\\.(js|css|png|jpg|svg|woff2?))",
      "dest": "backend/public/$1"
    },
    { "src": "/(.*)", "dest": "api/index.js" }
  ]
}
